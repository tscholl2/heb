{
  "name": "hweb",
  "version": "0.0.1",
  "scripts": {
    "dev": "NODE_ENV=development webpack-dev-server --hot --progress --colors --compress --port 8080 --host '0.0.0.0' --history-api-fallback --content-base 'www'",
    "bundle": "NODE_ENV=production webpack -p --progress --colors",
    "postbundle": "gzip -c www/lib/bundle.js > www/lib/bundle.js.gz && ls -lah | grep bundle",
    "bundle-dev": "NODE_ENV=development webpack --progress --colors",
    "bundle-analyzer": "NODE_ENV=bundle-analyzer webpack --progress --colors",
    "lint": "prettier --print-width 100 --trailing-comma all --write \"src/**/*.ts\"",
    "test": "TS_NODE_COMPILER_OPTIONS='{\"module\":\"commonjs\"}' ts-node -F test.ts $(find ./src -name '*_test.ts') | tap-summary"
  },
  "devDependencies": {
    "awesome-typescript-loader": "^3.4.0",
    "css-loader": "^0.28.7",
    "file-loader": "^1.1.5",
    "node-sass": "^4.7.2",
    "postcss-loader": "^2.0.9",
    "prettier": "^1.8.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.0",
    "tap-summary": "^4.0.0",
    "tape": "^4.8.0",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1",
    "webpack-bundle-analyzer": "^2.9.1",
    "webpack-dev-server": "^2.9.4",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "hyperapp": "git+https://github.com/hyperapp/hyperapp.git#0c952d7",
    "tslib": "^1.8.0"
  }
}

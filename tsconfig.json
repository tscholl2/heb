{
  "compilerOptions": {
    "allowJs": false,
    "charset": "uft8",
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["dom", "es6"],
    "module": "es6",
    "moduleResolution": "node",
    "outDir": "lib",
    "pretty": true,
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "target": "es6"
  },
  "include": [
    "benchmark/**/*",
    "test/**/*",
    "src/**/*",
    "typings/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}